require "socket"

server = "chat.freenode.net"
port = "6667"
nick = "CockneyBot"
channel = "#bitmaker"
#opens a new socket with the correct port and server
s = TCPSocket.open(server, port)
#white noise... 
# print("addr: ", s.addr.join(":"), "\n")
# print("peer: ", s.peeraddr.join(":"), "\n")
s.puts "USER RobomanBot 0 * RobomanBot"
s.puts "NICK #{nick}"
s.puts "JOIN #{channel}"
s.puts "PRIVMSG #{channel} :Hello from IRB Bot"

until s.eof? do
  msg = s.gets
  puts msg
end


